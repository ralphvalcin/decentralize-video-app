# PRODUCTION ENVIRONMENT CONFIGURATION
# CRITICAL: Replace all placeholder values with secure production values

# FRONTEND CONFIGURATION
VITE_SIGNALING_SERVER_URL=wss://your-signaling-server.com
VITE_INFURA_PROJECT_ID=your_production_infura_project_id
VITE_INFURA_API_SECRET=your_production_infura_api_secret

# CRITICAL SECURITY CONFIGURATION
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_64_CHARACTER_RANDOM_HEX_STRING

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SIGNALING_ENCRYPTION_KEY=REPLACE_WITH_32_CHARACTER_RANDOM_HEX_STRING

# SERVER CONFIGURATION
PORT=5001
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.com

# SECURITY LIMITS (Adjust based on your requirements)
MAX_CONNECTIONS_PER_ROOM=50
MESSAGE_HISTORY_LIMIT=100
RATE_LIMIT_WINDOW=60000
DEFAULT_RATE_LIMIT=10

# PERFORMANCE CONFIGURATION
INACTIVE_ROOM_TTL=1800000
CONNECTION_HEALTH_CHECK_INTERVAL=30000

# LOGGING CONFIGURATION
LOG_LEVEL=info
SECURITY_LOG_LEVEL=warn

# DATABASE CONFIGURATION (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/videochat
# REDIS_URL=redis://localhost:6379

# MONITORING CONFIGURATION (Optional)
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090

# SSL CONFIGURATION (if handling SSL in application)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem

# SECURITY HEADERS
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=true

# TURN SERVER CONFIGURATION (for production WebRTC)
# TURN_SERVER_URL=turn:your-turn-server.com:3478
# TURN_USERNAME=your_turn_username
# TURN_CREDENTIAL=your_turn_password
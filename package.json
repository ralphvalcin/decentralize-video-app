{
  "name": "decentralized-video-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start:signaling": "node signaling-server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report",
    "test:load": "k6 run tests/load/load-test.js",
    "test:load:webrtc": "k6 run tests/load/webrtc-performance-benchmark.js",
    "test:load:ai": "k6 run tests/load/ai-performance-benchmark.js",
    "test:load:validate": "node tests/load/validate-k6-syntax.cjs",
    "test:ai:performance": "node tests/load/ai-performance-master-runner.js",
    "test:ai:components": "node tests/load/ai-component-performance-validator.js",
    "test:ai:ui": "npm run dev & sleep 5 && npx playwright test tests/load/ai-ui-performance-test.spec.js",
    "test:ai:quick": "node tests/load/ai-performance-master-runner.js --skip-ui --verbose",
    "performance:audit": "node scripts/performance-audit.js",
    "security:scan": "node scripts/security-scan.js",
    "docker:build:frontend": "docker build -f docker/Dockerfile.frontend -t decentralized-video-app-frontend .",
    "docker:build:backend": "docker build -f docker/Dockerfile.backend -t decentralized-video-app-backend .",
    "docker:build": "npm run docker:build:frontend && npm run docker:build:backend",
    "k8s:deploy:staging": "cd k8s && kustomize build overlays/staging | kubectl apply -f -",
    "k8s:deploy:production": "cd k8s && kustomize build overlays/production | kubectl apply -f -",
    "health:check": "node scripts/health-check.sh",
    "dx:setup": "npm ci && npm run build && echo 'ðŸš€ Development environment ready!'",
    "dx:dev": "concurrently \"npm run start:signaling\" \"npm run dev\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dx:debug": "concurrently \"npm run start:signaling\" \"vite --mode development\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "dx:test:all": "npm run lint && npm run test:unit && npm run test:integration && npm run test:e2e:ci",
    "dx:monitor": "node scripts/dev-monitor.js",
    "dx:metrics": "node scripts/dev-metrics-dashboard.js",
    "dx:clean": "rm -rf node_modules dist coverage playwright-report && npm ci",
    "dx:reset": "npm run dx:clean && npm run dx:setup",
    "test:e2e:ci": "playwright test --reporter=html --reporter=github-actions",
    "webrtc:debug": "DEBUG=simple-peer:* npm run dx:dev",
    "webrtc:test:connection": "node scripts/test-webrtc-connection.js",
    "performance:profile": "node scripts/performance-profiler.js",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:serve": "npx http-server docs -p 8080 -o",
    "ai:validate": "npm run test:ai:quick && npm run test:ai:components",
    "security:full": "npm audit && npm run security:scan && node scripts/security-compliance-check.js",
    "team:sync": "node scripts/team-sync-check.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "buffer": "^6.0.3",
    "chart.js": "^4.5.0",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.6",
    "eventemitter3": "^5.0.1",
    "ipfs-http-client": "^56.0.2",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash-es": "^4.17.21",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.5.1",
    "react-hot-toast": "^2.5.2",
    "react-resizable": "^3.0.5",
    "react-rnd": "^10.5.2",
    "react-router-dom": "^6.30.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.10.4",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-grid-layout": "^1.3.5",
    "@types/react-resizable": "^3.0.7",
    "@types/simple-peer": "^9.11.8",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^30.0.5",
    "concurrently": "^8.2.2",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-mock-axios": "^4.8.0",
    "jest-transform-stub": "^2.0.0",
    "playwright": "^1.55.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3",
    "vite": "^4.4.5"
  }
}

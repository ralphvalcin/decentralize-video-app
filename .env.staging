# Staging Environment Configuration

# Application Configuration
NODE_ENV=staging
PORT=5001

# JWT Configuration
JWT_SECRET=staging-jwt-secret-change-in-production

# Frontend Configuration
FRONTEND_URL=https://staging.video-chat.example.com
VITE_SIGNALING_SERVER_URL=https://staging-api.video-chat.example.com

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=staging-redis-password

# Database Configuration (if using PostgreSQL)
DATABASE_URL=postgresql://username:password@staging-hostname:5432/staging_database
DATABASE_SSL=true
DATABASE_MAX_CONNECTIONS=10

# Monitoring and Logging
LOG_LEVEL=debug
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
MAX_ROOM_SIZE=50
MAX_CONCURRENT_ROOMS=100
SESSION_TIMEOUT=43200
CLEANUP_INTERVAL=1800

# Security Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=50
ENABLE_CORS=true
CORS_ORIGIN=https://staging.video-chat.example.com

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:staging-turn-server.com:3478
TURN_USERNAME=staging-turn-username
TURN_CREDENTIAL=staging-turn-credential

# AWS Configuration (if using AWS services)
AWS_REGION=us-west-2
AWS_S3_BUCKET=video-chat-staging-assets
AWS_CLOUDFRONT_DISTRIBUTION_ID=E1234567890STAGING

# Monitoring and Alerting
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK

# Feature Flags
ENABLE_ROOM_RECORDING=false
ENABLE_SCREEN_SHARING=true
ENABLE_CHAT=true
ENABLE_FILE_SHARING=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=7

# SSL/TLS Configuration
FORCE_HTTPS=true

# CDN Configuration
CDN_URL=https://staging-cdn.video-chat.example.com
STATIC_ASSETS_URL=https://staging-assets.video-chat.example.com
# Production Environment Configuration
# This file should be securely managed and never committed to version control
# Use secret management systems in production

# Application Configuration
NODE_ENV=production
PORT=5001

# JWT Configuration (MUST be changed in production)
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_IN_PRODUCTION

# Frontend Configuration
FRONTEND_URL=https://video-chat.example.com
VITE_SIGNALING_SERVER_URL=https://api.video-chat.example.com

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD

# Database Configuration (if using PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DATABASE_SSL=true
DATABASE_MAX_CONNECTIONS=20

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
MAX_ROOM_SIZE=100
MAX_CONCURRENT_ROOMS=1000
SESSION_TIMEOUT=86400
CLEANUP_INTERVAL=3600

# Security Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
CORS_ORIGIN=https://video-chat.example.com

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential

# AWS Configuration (if using AWS services)
AWS_REGION=us-west-2
AWS_S3_BUCKET=video-chat-assets
AWS_CLOUDFRONT_DISTRIBUTION_ID=E1234567890

# Monitoring and Alerting
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Feature Flags
ENABLE_ROOM_RECORDING=false
ENABLE_SCREEN_SHARING=true
ENABLE_CHAT=true
ENABLE_FILE_SHARING=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=video-chat-backups

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/video-chat.crt
SSL_KEY_PATH=/etc/ssl/private/video-chat.key
FORCE_HTTPS=true

# CDN Configuration
CDN_URL=https://cdn.video-chat.example.com
STATIC_ASSETS_URL=https://assets.video-chat.example.com